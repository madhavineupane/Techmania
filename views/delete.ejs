<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Options Page</title>
    <link rel="stylesheet" href="/css/join.css" />
  </head>
  <body>
    <div class="main-container">
      <!-- Top Left Image Container -->
      <div class="logo-container">
        <a href="/views/options.html"
          ><img src="/images/Logo.png" alt="Website Logo"
        /></a>
      </div>

    <!-- Logout Button -->
    <div class="logout-container">
      <form action="/logout" method="POST">
        <button type="submit" class="button">Logout</button>
      </form>
    </div>  

      <!-- Header -->
      <header>
        <h1>Delete a Product</h1>
        <p>Are you sure you want to delete this product?</p>
      </header>
    </div>

    <!-- Delete Product Form -->
    <form action="/delete" method="post" class="product-form">
      <!-- Error and success messages -->
      <% if (errorMessage) { %>
      <div class="error-message" style="color: red; margin-bottom: 1em" ,>
        <p><%= errorMessage %></p>
      </div>
      <% } %> <% if (successMessage) { %>
      <div class="success-message" style="color: green; margin-bottom: 1em" ;>
        <p><%= successMessage %></p>
      </div>
      <% } %>
      <div class="product-form-body">
        <label for="pID" class="product-label">Enter Product ID:</label>
        <input type="text" id="pID" name="pID" class="product-input" value="<%= product ? product.pId : '' %>" required />
      </div>
      <button type="submit" class="product-btn">Delete</button>
    </form>
  </body>
</html>
